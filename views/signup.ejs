<%- include('partials/header') -%>
<main class="form-section">
    <div class="flashes">
        <script type="text/javascript">window.setTimeout("document.querySelector('.flashes').style.display='none';", 5000); </script>
        <% if (alerts.error) { %>
            <% alerts.error.forEach(function(msg) { %>
            <div class="alert alert-error "><%= msg %></div>
            <% }); %>
        <% } %>
        <% if (alerts.success) { %>
            <% alerts.success.forEach(function(msg) { %>
            <div class="alert alert-success"><%= msg %></div>
            <% }); %>
        <% } %>
    </div>    

    <form action="/users/signup" method="POST" class="form-container" enctype="multipart/form-data">
        <h1 class="form-heading">Create Your Account <span class="wave">ðŸ˜Š</span></h1>
        Name: <input type="text" name="name" placeholder="Enter Name" required>
        Email: <input type="email" name="email" placeholder="Enter Email" required/>
        Mobile Number: <input type="text" name="mobile" placeholder="Enter Mobile Number" required/>
        Password:<input type="password" name="password" placeholder="Enter Password" required />
        Profile Picture: <input type="file" name="avatar">
        <button type="submit" class="login">Signup</button>
        <a class="center" href="/users/login">Already have an account?</a>
    </form>    
</main>
<%- include('partials/footer') -%>