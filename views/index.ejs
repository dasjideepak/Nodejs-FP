<%- include('partials/header') -%>
<main>
  <div class="flashes">
    <script type="text/javascript">window.setTimeout("document.querySelector('.flashes').style.display='none';", 5000); </script>
    <% if (alerts.error) { %>
        <% alerts.error.forEach(function(msg) { %>
        <div class="alert alert-error "><%= msg %></div>
        <% }); %>
    <% } %>
    <% if (alerts.success) { %>
        <% alerts.success.forEach(function(msg) { %>
        <div class="alert alert-success"><%= msg %></div>
        <% }); %>
    <% } %>
  </div>    
<% if(allproduct.length > 0) { %>
  <% allproduct.forEach(elem => { %>
    <p><%= elem.category %></p>
  <div class="product-container">
    <div class="left-side-sec">
      <div class="show-img">
        <div class="product-img">
          <img src="<%= elem.images %>" alt="<%= elem.name %>">
        </div>
        <div class="product-btn">

          <form action="/users/<%= elem.id %>/cart/add" method="post">
            <button type="submit" addto-cart-btn"><i class="fas fa-shopping-cart shopping-cart-small"></i>Add to Cart</button>
          </form>

          <button class="buy-now-btn">
            <i class="fas fa-store"></i>Buy Now
          </button>
        </div>
      </div>
    </div>
    <div class="right-side-sec">
      <h1 class="product-title"><%= elem.name %></h1>
      <h2 class="product-price">â‚¹ <%= elem.price %></h1>
      <h4>
        <span class="bold">Description:</span><%= elem.description %>
      </h4>
    </div>
  </div>  
  <% }) %>
<% } %> 
</main>
<%- include('partials/footer') -%>