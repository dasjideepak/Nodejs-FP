<%- include('partials/header') -%>
<main>
    <div class="flashes">
        <script type="text/javascript">window.setTimeout("document.querySelector('.flashes').style.display='none';", 5000); </script>
        <% if (alerts.error) { %>
            <% alerts.error.forEach(function(msg) { %>
            <div class="alert alert-error "><%= msg %></div>
            <% }); %>
        <% } %>
        <% if (alerts.success) { %>
            <% alerts.success.forEach(function(msg) { %>
            <div class="alert alert-success"><%= msg %></div>
            <% }); %>
        <% } %>
    </div>    

    <h5>Name: <%= user.name%></h5>
    <h5>Email: <%= user.email%></h5>
    <h5>Mobile Number: <%= user.mobile%></h5>
    <% if(user.avatar === undefined) { %>
        <img class="user-img" src="/images/user.png" alt="<%= user.name %>">
    <% } else { %>
        <h5>Avatar: <img class="user-img" src="<%= user.avatar%>" alt="<%= user.name%>"></h5>
    <% } %>    
    <a href="/users/<%= user.id %>/edit"> Update Profile </a>
    <a href="">Change Password</a>
    <a class="del-btn" href="/users/<%= user.id %>/delete">Delete</a>        
    <% if(user.isAdmin) { %>
    <a href="/product/add">Add New Product</a>
<% } %>
    <a href="/users/logout">Logout Profile</a>       
</main>
<%- include('partials/footer') -%>